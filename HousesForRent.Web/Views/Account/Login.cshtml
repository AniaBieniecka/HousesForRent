@model LoginVM

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-9">
            <div class="card m-sm-4 bg-light">
                <div class="card-header p-3">
                    <div class="text-center">
                        <h3>Login</h3>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <section>
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-floating m-3">
                                    <input asp-for="Email" class="form-control border shadow" aria-required="true" />
                                    <label asp-for="Email" class="form-label"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating m-3">
                                    <input asp-for="Password" class="form-control border shadow" aria-required="true" />
                                    <label asp-for="Password" class="form-label"></label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="checkbox m-3">
                                    <input class="form-check-input" asp-for="RememberMe" />
                                    <label asp-for="RememberMe" class="form-label"></label>
                                </div>
                                <div class="row justify-content-center mx-3">
                                    <button type="submit" class="btn btn-primary">Log in</button>
                                </div>
                                <div class="d-flex justify-content-between mx-3 mt-3">
                                    <p>
                                        <a asp-action="ForgotPassword">Forgot your password</a>
                                    </p>
                                    <p>
                                        <a asp-action="Register">Register a new user</a>
                                    </p>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}