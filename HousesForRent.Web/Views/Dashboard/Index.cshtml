<div class="container-fluid">
    <div class="row">
        <div class="d-flex justify-content-center m-2">
            <h3>Dashboard</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-xl-4">
            <div class="card mt-3">
                <div class="card-body pb-0">
                    <div class="float-end mt-0 mb-0 text-muted">
                        <div id="totalBookingRadialChart" data-colors='["--bs-success"]'></div>
                    </div>
                    <div>
                        <p class="text-muted">Total bookings:</p>
                        <h4 class="my-1">
                            <span id="spanTotalBookingCount">XX</span>
                        </h4>
                    </div>
                    <p class="text-muted mt-4 mb-0" id="sectionBookingCount"></p>
                    <div class="justify-content-center text-center chart-spinner" style="display:none">
                        <div class="spinner-border text-secondary" role="status">
                            <span class="visually-hidden">Loading</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-6 col-xl-4">
            <div class="card mt-3">
                <div class="card-body pb-0">
                    <div class="float-end mt-3 mb-0">
                        <div id="totalUserRadialChart" data-colors='["--bs-warning"]'></div>
                    </div>
                    <div>
                        <p class="text-muted">Total users:</p>
                        <h4 class="my-1">
                            <span id="spanTotalUserCount" style="">XX</span>
                        </h4>
                    </div>
                    <p class="text-muted mt-3 mb-0" id="sectionUserCount"></p>
                    <div class="justify-content-center text-center chart-spinner" style="display:none">
                        <div class="spinner-border text-secondary" role="status">
                            <span class="visually-hidden">Loading</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-6 col-xl-4">
            <div class="card mt-3">
                <div class="card-body pb-0">
                    <div class="float-end mt-3 mb-0">
                        <div id="totalIncomeRadialChart" data-colors='["--bs-info"]'></div>
                    </div>
                    <div>
                        <p class="text-muted">Total income:</p>
                        <h4 class="my-1">
                            <span id="spanTotalIncome">XX</span>
                        </h4>
                    </div>
                    <p class="text-muted mt-3 mb-0" id="sectionIncome"></p>
                    <div class="justify-content-center text-center chart-spinner" style="display:none">
                        <div class="spinner-border text-secondary" role="status">
                            <span class="visually-hidden">Loading</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-12 col-xl-8">
            <div class="card mt-3">
                <div class="card-body pb-0">
                    <p class="text-muted">New customers and bookings:</p>
                    <div id="newCustomerAndBookingLineChart" data-colors='["--bs-warning","--bs-success"]'>
                    </div>
                    <div class="justify-content-center text-center chart-spinner" style="display:none">
                        <div class="spinner-border text-secondary" role="status">
                            <span class="visually-hidden">Loading</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-12 col-xl-4">
            <div class="card mt-3">
                <div class="card-body pb-0 ">
                    <p class="text-muted">Customer bookings:</p>
                    <div id="customerBookingPieChart" data-colors='["--bs-warning","--bs-success"]'>
                    </div>
                    <div class="justify-content-center text-center chart-spinner" style="display:none">
                        <div class="spinner-border text-secondary" role="status">
                            <span class="visually-hidden">Loading</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/dashboard/getTotalBookingChart.js"></script>
    <script src="~/js/dashboard/loadRadialBarChart.js"></script>
    <script src="~/js/dashboard/getTotalUserChart.js"></script>
    <script src="~/js/dashboard/getTotalIncomeChart.js"></script>
    <script src="~/js/dashboard/getCustomerBookingPieChart.js"></script>
    <script src="~/js/dashboard/getCustomerAndBookingLineChart.js"></script>
}