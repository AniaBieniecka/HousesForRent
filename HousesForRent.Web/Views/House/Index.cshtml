@model List<House>

<div class="container">
    <h2 class="text-center p-3">House list</h2>
    <div class="pb-2">
        <a asp-controller="House" asp-action="Create" class="btn btn-primary">Create new house</a>
    </div>
    <table class="table table-bordered table-hover table-dark">
        <thead class="bg-primary text-center align-middle">
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Detailed information</th>
                <th>Price per hotel night</th>
                <th style="width:40%">Description</th>
                <th></th>
            </tr>
        </thead>

        <tbody class="table-light">
            @foreach (var house in Model)
            {
                <tr>
                    <td>@house.Name</td>
                    <td>@house.Location</td>
                    <td>@house.Area m<sup>2</sup> house area<br/>
                        @house.RoomsQuantity rooms<br />
                        @house.SingleBedQuantity single beds<br />
                        @house.DoubleBedQuantity double beds<br />
                        @house.Occupancy max. occupancy<br />
                    </td>

                    <td>
                        @if (house.IsDiscountActivated == true)
                        {
                            <s>@house.Price.ToString("c")</s>
                            @house.DiscountPrice.ToString("c")
                        }
                        else
                        {
                            @house.Price.ToString("c")
                        }
                    </td>
                    <td>@house.Description</td>
                    <td>
                        <div class="d-flex flex-column">
                            <a asp-controller="House" asp-action="Update" asp-route-id="@house.Id" class="btn btn-primary m-1"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="House" asp-action="Delete" asp-route-id="@house.Id" class="btn btn-primary m-1"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>


</div>