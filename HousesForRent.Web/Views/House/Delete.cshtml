@model House

<div class="row justify-content-md-center">
    <div class="col-lg-9">
        <div class="card bg-light p-2">
            <h2 class="text-center p-3">Delete house</h2>
            <div class="p-2">
                <form method="post" class="row" enctype="multipart/form-data">
                    <input hidden asp-for="Id" />
                    <div class="row p3">
                        <div class="form-floating py-2 col-12 col-md-6">
                            <input asp-for="Name" disabled class="form-control border shadow"  />
                            <label asp-for="Name" class="m-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12 col-md-6">
                            <input asp-for="Location" disabled class="form-control border shadow" />
                            <label asp-for="Location" class="m-2"></label>
                        </div>
                    </div>
                    <div class="row p3">
                        <div class="form-floating py-2 col-12 col-md-6">
                            <input asp-for="Area" disabled class="form-control border shadow" />
                            <label asp-for="Area" class="m-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12 col-md-6">
                            <input asp-for="RoomsQuantity" disabled class="form-control border shadow" />
                            <label asp-for="RoomsQuantity" class="m-2"></label>
                        </div>
                    </div>
                    <div class="row p3">
                        <div class="form-floating py-2 col-12 col-md-6">
                            <input asp-for="SingleBedQuantity" disabled class="form-control border shadow" />
                            <label asp-for="SingleBedQuantity" class="m-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12 col-md-6">
                            <input asp-for="DoubleBedQuantity" disabled class="form-control border shadow" />
                            <label asp-for="DoubleBedQuantity" class="m-2"></label>
                        </div>
                    </div>

                    <div class="row p3">
                        <div class="form-floating py-2 col-12 col-md-6">
                            <input asp-for="Price" disabled class="form-control border shadow" />
                            <label asp-for="Price" class="m-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12 col-md-6">
                            <input asp-for="DiscountPrice" disabled class="form-control border shadow" />
                            <label asp-for="DiscountPrice" class="m-2"></label>
                        </div>
                    </div>
                    <div class="row justify-content-md-center p3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Description" disabled class="form-control border shadow" />
                            <label asp-for="Description" class="m-2"></label>
                        </div>
                    </div>
                    <div class="row justify-content-md-center pt-2">
                        <div class="col-6 col-md-6">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-trash"></i>  Delete
                            </button>
                        </div>
                        <div class="col-6 col-md-6">
                            <a asp-controller="House" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle"></i>  Cancel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="col-lg-3 my-2">
            <img src="@Model.ImageUrl" width="100%" />
        </div>
    }
</div>

