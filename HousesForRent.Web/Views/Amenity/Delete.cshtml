@model Amenity

<div class="row justify-content-md-center">
    <div class="col-lg-9">
        <div class="card bg-light p-2">
            <h2 class="text-center p-3">Delete amenity</h2>
            <div class="p-2">
                <form method="post" class="row">
                    <div class="row justify-content-md-center p3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" disabled class="form-control border shadow" />
                            <label asp-for="Name" class="m-2"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-md-center p3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Description" disabled class="form-control border shadow" />
                            <label asp-for="Description" class="m-2"></label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-md-center pt-2">
                        <div class="col-6 col-md-6">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-check-circle"></i>  Delete
                            </button>
                        </div>
                        <div class="col-6 col-md-6">
                            <a asp-controller="Amenity" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle"></i>  Cancel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

